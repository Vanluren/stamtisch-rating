generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id               String          @id @default(uuid())
  email            String          @unique
  password         String
  profile          Profile?
  reviews          Review[]
  ratings          Rating[]
  comments         Comment[]
  images           ImageFile[]
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  ReviewActivity   ReviewActivity? @relation(fields: [reviewActivityId], references: [id])
  reviewActivityId String?
}

model Profile {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  bio       String?
  avatar    String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ReviewStatus {
  ACTIVE
  INACTIVE
}

model Review {
  id          String           @id @default(uuid())
  title       String
  description String?
  owner       User             @relation(fields: [ownerId], references: [id])
  ownerId     String
  location    ReviewLocation   @relation(fields: [locationId], references: [id])
  acitivities ReviewActivity[]
  locationId  String
  ratings     Rating[]
  comments    Comment[]
  status      ReviewStatus
  imagePaths  String[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model ReviewLocation {
  id         String           @id @default(uuid())
  name       String
  address    String
  latitude   Float
  longitude  Float
  placeId    String?
  reviews    Review[]
  activities ReviewActivity[]
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
}

enum ActivityStatus {
  ACTIVE
  INACTIVE
}

model ReviewActivity {
  id           String         @id @default(uuid())
  location     ReviewLocation @relation(fields: [locationId], references: [id])
  locationId   String
  review       Review         @relation(fields: [reviewId], references: [id])
  reviewId     String
  participants User[]
  status       ActivityStatus @default(ACTIVE)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model Rating {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  review    Review   @relation(fields: [reviewId], references: [id])
  reviewId  String
  rating    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id        String   @id @default(uuid())
  title     String?
  text      String
  imagePath String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  review    Review   @relation(fields: [reviewId], references: [id])
  reviewId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ImageFile {
  id      String @id @default(uuid())
  path    String
  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String
  type    String
  size    Int
}
